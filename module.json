{
  "name": "Spat Revolution",
  "type": "OSC",
  "path": "Immersive solution",
  "version": "1.0.0",
  "description": "FLUX Spat Revolution Module",
  "url": "https://github.com/nicolaserard/Spat-Revolution-Chataigne-Module",
  "downloadURL": "https://github.com/nicolaserard/Spat-Revolution-Chataigne-Module/archive/master.zip",
  "hasInput": true,
  "hasOutput": true,
  "hideDefaultCommands": false,
  "hideDefaultParameters": [
  ],
  "defaults": {
    "autoAdd": false,
    "oscInput": {
      "localPort": 8001
    },
    "OSC Outputs": {
      "OSC Output": {
        "local": false,
        "remoteHost": "192.168.1.100",
        "remotePort": 8000
      }
    }
  },
  "parameters": {
  },
  	"scripts": [
		"SpatRevolution.js"
	],

 "values": {
   "Setup":
   {
     "type":"Container",

     "Cartesian":
     {
       "type":"Boolean",
       "description":"Define if cartesian or polar data are displayed\n"
      }

 },
   "Source container":
   {
     "type":"Container",
     "Source Index":
     {
       "type": "Integer",
       "description":"Specify source's index.\n",
       "min":1,
       "max":128
     },
     "Dump Source":
     {
       "type": "Trigger"
     }

   },
   "Room container":
   {
     "type":"Container",
     "Room Index":
     {
       "type": "Integer",
       "description":"Specify room's index.\n",
       "min":1,
       "max":128
     },
     "Dump Room":
     {
       "type": "Trigger"
     },
     "Room Name":
     {
       "type":"String",
       "description": "Room Name\n"
     },
     "Mute Room":
     {
       "type":"Boolean",
       "description":"Mute the room\n"
     },
     "Gain Room":
     {
       "type":"Float",
       "description":"Room gain.\n",
       "min": -144.5,
       "max": 24.0
     },
     "Listener Position":
     {
       "type":"Point3D",
       "min":[-100,-100,-100],
       "max":[100,100,100]
     },
     "Listener Orientation":
     {
       "type":"Point3D",
       "min":[-180.0,-180.0,-180.0],
       "max":[180.0,180.0,180.0]
     },
     "Reverb":
     {
       "type": "Container",
       "Reverb Density": {
         "type": "Boolean",
         "description": "Choose the room density (8 or 16 channels)\n"
       },
       "Reverb Enable Room": {
         "type": "Boolean",
         "description": "Enable the room reverb\n"
       },
       "Room size":
       {
         "type":"Float",
         "description":"Set the room size.\n",
         "min": 0,
         "max": 15000.0
       },
       "Reverb start":
       {
         "type":"Float",
         "description":"Set the reverb start.\n",
         "min": 8.0,
         "max": 500.0
       },
       "Reverb Gain":
       {
         "type":"Float",
         "description":"Set the reverb Gain.\n",
         "min": -24.0,
         "max": 24.0
       },
       "Reverb Factor":
       {
         "type":"Float",
         "description":"Set the reverb Factor.\n",
         "min": 0.5,
         "max": 2.0
       },
       "Perceptual Factor":
       {
         "type": "Container",
         "Reverberance": {
           "type": "Float",
           "description": "Set the reverb Reverberance.\n",
           "min": 5.0,
           "max": 100.0
         },
         "Heaviness": {
           "type": "Float",
           "description": "Set the room reverb Heaviness.\n",
           "min": 5.0,
           "max": 50.0
         },
         "Liveness": {
           "type": "Float",
           "description": "Set the room reverb Liveness.\n",
           "min": 5.0,
           "max": 50.0
         }
       },
       "Room Response":
       {
         "type": "Container",
         "Early Min":
         {
           "type": "Float",
           "description": "Set the early minimum of the reverb.\n",
           "min": 1.0,
           "max": 120.0
         },
         "Early Max":
         {
           "type": "Float",
           "description": "Set the early maximum of the reverb.\n",
           "min": 1.0,
           "max": 120.0
         },
         "Early Dist":
         {
           "type": "Float",
           "description": "Set the early distribution of the reverb.\n",
           "min": 0.1,
           "max": 0.9
         },
         "Early Shape":
         {
           "type": "Float",
           "description": "Set the early shape of the reverb.\n",
           "min": 0.1,
           "max": 0.9
         },
         "Cluster Min":
         {
           "type": "Float",
           "description": "Set the cluster minimum of the reverb.\n",
           "min": 1.0,
           "max": 300.0
         },
         "Cluster Max":
         {
           "type": "Float",
           "description": "Set the cluster maximum of the reverb.\n",
           "min": 1.0,
           "max": 300.0
         },
         "Cluster Dist":
         {
           "type": "Float",
           "description": "Set the cluster distribution of the reverb.\n",
           "min": 0.1,
           "max": 0.9
         }
       },
       "Options":
       {
         "type": "Container",
         "Reverb Infinite":
         {
           "type": "Boolean",
           "description":"Enable/Disable the infinite reverberation.\n"
         },
         "Air Enable":
         {
           "type": "Boolean",
           "description":"Enable/Disable the air absorption.\n"
         },
         "Air Freq":
         {
           "type": "Float",
           "description":"Set the air absorption frequency.\n",
           "min": 20.0,
           "max": 20000.0
         },
         "Modal Density":
         {
           "type": "Float",
           "description":"Set the modal density.\n",
           "min": 0.2,
           "max": 2.0
         }
       },
       "Crossover":
       {
         "type": "Container",
         "Frequency Low":
         {
           "type": "Float",
           "description":"Set the low/mid crossover frequency of the reverb for the room.\n",
           "min": 20.0,
           "max": 20000.0
         },
         "Frequency High":
         {
           "type": "Float",
           "description":"Set the mid/high crossover frequency of the reverb for the room.\n",
           "min": 20.0,
           "max": 20000.0
         }
         }
       }
     }

   }
   },

  "commands": {
  }
}


